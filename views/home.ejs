<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>LinkifyText</title>
        <link rel="stylesheet" href="/stylesheets/nav.css" />
        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            html,
            body {
                height: 100%;
            }

            body {
                /* height: 100vh; */
                font-family: Arial, Helvetica, sans-serif;

                display: flex;
                flex-direction: column;
            }
            .container {
                max-width: 900px;
                /* border: 1px solid red; */
                margin: 0 auto;
            }

            section {
                margin-top: 30px;
                height: 60%;
            }
            section .container {
                height: 100%;
            }

            section form {
                height: 100%;
                position: relative;
                display: flex;
                flex-direction: column;
                align-items: flex-start;
                justify-content: center;

                gap: 10px;
            }

            .textarea-label {
                position: absolute;
                top: 20px;

                font-size: 0.9rem;
                padding-inline: 15px;
                color: rgb(57, 55, 55);
                transition: 0.2s ease-in-out;
            }

            .textarea-label.active {
                top: 10px;

                font-size: 0.8rem;

                color: grey;
            }

            textarea {
                width: 100%;
                height: 100%;

                resize: none;
                outline: none;
                border: 2px solid rgba(80, 80, 81, 0.753);
                border-radius: 8px;

                padding-inline: 15px;
                padding-block: 25px;

                font-size: 1rem;
            }

            textarea:focus {
                box-shadow: 0 0 2px 3px rgba(114, 191, 219, 0.806);
            }

            .btn {
                font-size: 1rem;
                padding: 0.3em 0.5em;

                color: rgb(0, 0, 0);

                border: 0.7px solid black;
                border-radius: 2px;

                background-color: rgba(0, 0, 0, 0.139);
                cursor: pointer;
            }

            .btn:active {
                transform: translate(1px, 1px);
            }

            form img {
                width: 20px;
                vertical-align: middle;
            }

            footer {
                margin-top: auto;
                font-family: monospace;

                font-size: 1rem;
                color: rgb(255, 253, 253);
                padding: 6px;
                text-align: center;
                background-color: rgb(41, 41, 41);
            }

            footer a {
                color: rgb(255, 253, 253);
            }

            @media screen and (max-width: 900px) {
                .container {
                    margin-inline: 10px;
                }
            }
        </style>
    </head>
    <body>
        <%- include('partials/nav.ejs') %>
        <section>
            <div class="container">
                <form action="/" method="POST">
                    <textarea name="text" id="" placeholder=""></textarea>
                    <div class="exp-cont">
                        <label for="expiry">Expire Text : </label>
                        <select name="exp-time" id="expiry">
                            <option value="5">5 mins</option>
                            <option value="15">15 mins</option>
                            <option value="30">30 mins</option>
                            <option value="60">30 mins</option>
                        </select>
                    </div>
                    <!-- <button type="submit" class="btn">
                        Create Link
                        <img src="./static/assets/file.png" alt="" />
                    </button> -->

                    <button type="submit" class="btn">Create Link</button>

                    <span class="textarea-label">Paste the text here</span>
                </form>
            </div>
        </section>

        <footer class="bg-dark text-center text-white mt-auto">
            <div>
                Made with <span style="color: #e25555">‚ù§</span> by
                <a
                    class="text-white"
                    href="https://github.com/ritik48"
                    target="_blank"
                    >Ritik</a
                >
            </div>
        </footer>

        <script>
            const textarea = document.querySelector("textarea");
            const textarea_label = document.querySelector(".textarea-label");

            textarea.addEventListener("focus", () => {
                textarea_label.classList.add("active");
            });

            textarea.addEventListener("blur", (e) => {
                if (!e.target.value) {
                    textarea_label.classList.remove("active");
                }
            });
        </script>
    </body>
</html>
