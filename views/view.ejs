<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>LinkifyText | View Paste Content</title>
        <link rel="stylesheet" href="/stylesheets/nav.css" />
        <link rel="stylesheet" href="/stylesheets/footer.css" />

        <style>
            :root {
                --primary-color: #000000;
                --secondary-color: rgb(255, 255, 255);
                --accent-color: rgba(230, 228, 228, 0.671);
                --side-icon-size: 20px;
            }
            .dark-mode {
                --primary-color: white;
                --secondary-color: rgb(36, 36, 36);
                --accent-color: rgb(71, 71, 71);

                --side-icon-size: 22px;
            }

            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            html,
            body {
                height: 100%;
                background-color: var(--accent-color);
            }

            body {
                color: var(--primary-color);
                font-family: Arial, Helvetica, sans-serif;

                display: flex;
                flex-direction: column;
            }

            .container {
                max-width: 900px;
                /* border: 1px solid red; */
                margin: 0 auto;
            }

            section {
                margin-top: 30px;
                height: 60%;

                /* border: 1px solid yellow; */
            }
            section .container {
                height: 100%;
            }

            .paste-container {
                display: flex;
                height: 100%;
            }

            textarea {
                width: 100%;
                height: 100%;

                resize: none;
                border: 2px solid rgba(80, 80, 81, 0.753);
                border-radius: 8px;

                padding-inline: 15px;
                padding-block: 25px;

                font-size: 1rem;

                background-color: var(--secondary-color);
                color: var(--primary-color);

                /* border-color: #bbbbbba4; */

                border-top-left-radius: 0;
                border-bottom-left-radius: 0;
            }

            .side-buttons {
                /* border: 1px solid #bbbbbba4; */
                border-right: none;
                border: 2px solid rgba(80, 80, 81, 0.753);
                /* border-color: #bbbbbba4; */
                border-radius: 5px;

                border-top-right-radius: 0;
                border-bottom-right-radius: 0;

                border-right: none;
                padding-top: 10px;

                background-color: var(--secondary-color);

                text-align: center;
            }
            .side-buttons img {
                width: var(--side-icon-size);
            }

            .copy {
                background: none;
                position: relative;
                padding: 0;
                margin-bottom: 15px;
                border: none;
            }
            .copy:active {
                transform: translate(2px, 2px);
            }
            /* .edit {
                font-size: 20px !important;
            }
            .edit {
                color: rgb(9, 221, 72);
            } */
            .side-btn {
                cursor: pointer;
            }

            .info {
                position: absolute;
                left: 50%;
                transform: translateX(-50%);
                top: -25px;

                background-color: rgba(17, 17, 17, 0.685);
                color: white;
                border-radius: 4px;

                font-size: 12px;
                padding: 2px 4px;
                opacity: 0;

                transition: 0.3s ease-in-out;
            }
            .expires-in {
                margin-top: 10px;
            }

            .msg {
                color: rgb(197, 193, 193);
                margin-top: 15px;
                text-align: center;
            }

            @media screen and (max-width: 900px) {
                .container {
                    margin-inline: 10px;
                }
            }
        </style>
    </head>
    <body class="d-flex flex-column min-vh-100">
        <!-- --------------- -->

        <%- include('partials/nav.ejs') %>
        <section>
            <div class="container">
                <div class="paste-container">
                    <div class="side-buttons">
                        <button class="copy side-btn">
                            <img src="/assets/copy_dark_mode.svg" alt="" />
                            <span class="info">Copied</span>
                        </button>
                        <a
                            href="/edit/<%= Text.address %>"
                            class="edit side-btn"
                            ><img src="/assets/edit_dark_mode.svg" alt=""
                        /></a>
                    </div>
                    <textarea name="text" id="" disabled>
<%= Text.text %></textarea
                    >
                </div>

                <div class="expires-in mx-3">
                    Link expires at:
                    <span class="timer"> <%= Text.expiresAt %></span>
                </div>
                <p class="msg">
                    ðŸ”¥ To access this content, enter <%= Text.address %> on the
                    home page and click view ðŸ”¥
                </p>
            </div>
        </section>

        <%- include('partials/footer') %>

        <script>
            // code for copying
            function copyTextToClipboard() {
                const textarea = document.querySelector("textarea");
                const status = textarea.disabled;

                if (status) {
                    textarea.disabled = false;
                }
                // Select the text inside the textarea
                textarea.select();

                try {
                    // Execute the copy command
                    document.execCommand("copy");
                    console.log("Text copied to clipboard");
                } catch (err) {
                    console.error("Unable to copy text: ", err);
                }

                // Deselect the textarea
                textarea.setSelectionRange(0, 0);

                if (status) {
                    textarea.disabled = true;
                }

                const info = document.querySelector(".info");
                info.style.opacity = "1";

                setTimeout(() => {
                    info.style.opacity = "0";
                }, 1200);
            }

            document
                .querySelector(".copy")
                .addEventListener("click", copyTextToClipboard);
        </script>
        <script src="/javascripts/nav.js"></script>
    </body>
</html>
