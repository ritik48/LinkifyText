<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>Pate It</title>
        <link rel="stylesheet" href="/stylesheets/nav.css" />

        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            html,
            body {
                height: 100%;
                border: 1px solid red;
            }

            body {
                font-family: Arial, Helvetica, sans-serif;

                display: flex;
                flex-direction: column;
            }

            .container {
                max-width: 900px;
                /* border: 1px solid red; */
                margin: 0 auto;
            }

            section {
                margin-top: 30px;
                height: 60%;

                /* border: 1px solid yellow; */
            }
            section .container {
                height: 100%;
            }

            .paste-container {
                display: flex;
                height: 100%;
            }

            textarea {
                width: 100%;
                height: 100%;

                resize: none;
                outline: none;
                border: 2px solid rgba(80, 80, 81, 0.753);
                border-radius: 8px;

                padding-inline: 15px;
                padding-block: 25px;

                font-size: 1rem;

                background-color: #f1f1f1a4;

                border-color: #bbbbbba4;

                border-top-left-radius: 0;
                border-bottom-left-radius: 0;
            }

            .side-buttons {
                border: 1px solid #bbbbbba4;
                border-right: none;
                border-color: #bbbbbba4;
                border-radius: 5px;

                border-top-right-radius: 0;
                border-bottom-right-radius: 0;

                padding-top: 10px;

                text-align: center;
            }
            .side-buttons img {
                width: 20px;
            }

            .copy {
                background: none;
                position: relative;
                padding: 0;
                margin-bottom: 15px;
                border: none;
            }
            .copy:active {
                transform: translate(2px, 2px);
            }
            /* .edit {
                font-size: 20px !important;
            }
            .edit {
                color: rgb(9, 221, 72);
            } */
            .side-btn {
                cursor: pointer;
            }

            .info {
                position: absolute;
                left: 50%;
                transform: translateX(-50%);
                top: -25px;

                background-color: rgba(17, 17, 17, 0.685);
                color: white;
                border-radius: 4px;

                font-size: 12px;
                padding: 2px 4px;
                opacity: 0;

                transition: 0.3s ease-in-out;
            }
            .expires-in {
                margin-top: 10px;
            }

            footer {
                margin-top: auto;
                font-family: monospace;

                font-size: 1rem;
                color: rgb(255, 253, 253);
                padding: 6px;
                text-align: center;
                background-color: rgb(41, 41, 41);

                border: 1px solid green;
            }

            footer a {
                color: rgb(255, 253, 253);
            }

            @media screen and (max-width: 900px) {
                .container {
                    margin-inline: 10px;
                }
            }
        </style>
    </head>
    <body class="d-flex flex-column min-vh-100">
        <!-- --------------- -->

        <%- include('partials/nav.ejs') %>
        <section>
            <div class="container">
                <div class="paste-container">
                    <div class="side-buttons">
                        <button class="copy side-btn">
                            <img src="/assets/copy-regular.svg" alt="" />
                            <span class="info">Copied</span>
                        </button>
                        <a href="/edit/<%= Text.address %>" class="edit side-btn"><img
                                src="/assets/pen-to-square-regular.svg"
                                alt=""
                        /></a>
                    </div>
                    <textarea name="text" id="" disabled><%= Text.text %></textarea>
                </div>

                <div class="expires-in mx-3">
                    Text expires at:
                    <span class="timer"
                        ><%= Text.expiresAt.getUTCHours() %>:<%=
                        Text.expiresAt.getUTCMinutes() %>
                    </span>
                </div>
            </div>
        </section>

        <footer class="">
            <div>
                Made with <span style="color: #e25555">‚ù§</span> by
                <a
                    class="text-white"
                    href="https://github.com/ritik48"
                    target="_blank"
                    >Ritik</a
                >
            </div>
        </footer>
        <script>
            function copyTextToClipboard() {
                const textarea = document.querySelector("textarea");
                const status = textarea.disabled;

                if (status) {
                    textarea.disabled = false;
                }
                // Select the text inside the textarea
                textarea.select();

                try {
                    // Execute the copy command
                    document.execCommand("copy");
                    console.log("Text copied to clipboard");
                } catch (err) {
                    console.error("Unable to copy text: ", err);
                }

                // Deselect the textarea
                textarea.setSelectionRange(0, 0);

                if (status) {
                    textarea.disabled = true;
                }

                const info = document.querySelector(".info");
                info.style.opacity = "1";

                setTimeout(() => {
                    info.style.opacity = "0";
                }, 1200);
            }

            document
                .querySelector(".copy")
                .addEventListener("click", copyTextToClipboard);
        </script>
    </body>
</html>
