<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>LinkifyText</title>
        <link rel="stylesheet" href="/stylesheets/nav.css" />
        <link rel="stylesheet" href="/stylesheets/footer.css" />

        <style>
            :root {
                --primary-color: #000000;
                --secondary-color: rgb(255, 255, 255);
                --accent-color: rgba(203, 202, 202, 0.671);
            }
            .dark-mode {
                --primary-color: white;
                --secondary-color: rgb(36, 36, 36);
                --accent-color: rgb(71, 71, 71);
            }
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            html,
            body {
                height: 100%;
                background-color: var(--accent-color);
            }

            body {
                color: var(--primary-color);
                font-family: Arial, Helvetica, sans-serif;

                display: flex;
                flex-direction: column;
            }
            .container {
                max-width: 900px;
                margin: 0 auto;
            }

            section {
                margin-top: 30px;
                height: 60%;
            }
            section .container {
                height: 100%;
            }

            section form {
                height: 100%;
                position: relative;
                display: flex;
                flex-direction: column;
                align-items: flex-start;
                justify-content: center;

                gap: 10px;
            }

            .textarea-label {
                position: absolute;
                top: 20px;

                font-size: 0.9rem;
                padding-inline: 15px;
                color: rgb(122, 121, 121);
                transition: 0.2s ease-in-out;
            }

            .textarea-label.active {
                top: 10px;

                font-size: 0.8rem;

                color: grey;
            }

            textarea {
                width: 100%;
                height: 100%;

                resize: none;
                outline: none;
                border: 2px solid rgba(80, 80, 81, 0.753);
                border-radius: 8px;

                padding-inline: 15px;
                padding-block: 25px;

                background-color: var(--secondary-color);
                font-size: 1rem;
                color: var(--primary-color);
            }

            textarea:focus {
                box-shadow: 0 0 2px 3px rgba(114, 191, 219, 0.806);
            }

            .btn {
                font-size: 1rem;
                padding: 0.3em 0.75em;

                color: var(--primary-color);

                border: 0.7px solid black;
                border-radius: 2px;

                background-color: var(--secondary-color);
                cursor: pointer;

                margin-top: 10px;
            }

            .edit-btn img {
                width: 18px;
                margin-top: -4px;
                margin-left: 3px;
            }

            .btn:hover {
                opacity: 0.8;
            }

            .btn:active {
                transform: translate(1px, 1px);
            }

            form img {
                width: 20px;
                vertical-align: middle;
            }

            .expires-in {
                margin-top: 10px;
            }

            @media screen and (max-width: 900px) {
                .container {
                    margin-inline: 10px;
                }
            }
        </style>
    </head>
    <body>
        <%- include('partials/nav.ejs') %>
        <section>
            <div class="container">
                <form
                    action="/edit/<%= Text.address %>?_method=PATCH"
                    method="POST"
                >
                    <textarea name="text" id="" placeholder="">
<%= Text.text %></textarea
                    >

                    <div class="expires-in mx-3">
                        Link expires at:
                        <span class="timer"><%= Text.expiresAt %> mins</span>
                    </div>

                    <button type="submit" class="btn edit-btn">
                        Edit
                        <img src="/assets/pen-to-square-regular.svg" alt="" />
                    </button>

                    <span class="textarea-label active"
                        >Edit the text here</span
                    >
                </form>
            </div>
        </section>

        <%- include('partials/footer') %>

        <script>
            const textarea = document.querySelector("textarea");
            const textarea_label = document.querySelector(".textarea-label");

            textarea.addEventListener("focus", () => {
                textarea_label.classList.add("active");
            });

            textarea.addEventListener("blur", (e) => {
                if (!e.target.value) {
                    textarea_label.classList.remove("active");
                }
            });
        </script>
        <script src="/javascripts/nav.js"></script>
    </body>
</html>
